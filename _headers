# Security Headers for VUSA Individual Voting System
# Place this file in your site's public/root directory

/*
  # Prevent the site from being embedded in frames (prevents clickjacking)
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection in browsers
  X-XSS-Protection: 1; mode=block
  
  # Control how much referrer information is shared
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Prevent access to dangerous browser features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), accelerometer=(), gyroscope=(), magnetometer=()
  
  # Content Security Policy - allows our app to work with Google APIs
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://apis.google.com https://accounts.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; connect-src 'self' https://sheets.googleapis.com https://www.googleapis.com https://accounts.google.com https://oauth2.googleapis.com; img-src 'self' data: https:; frame-src https://accounts.google.com;
  
  # Force HTTPS for all future visits (31536000 = 1 year)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

# Additional headers for documentation files
/README.md
  Content-Type: text/plain; charset=utf-8
  
/LICENSE
  Content-Type: text/plain; charset=utf-8
  
/CONTRIBUTING.md
  Content-Type: text/plain; charset=utf-8
  
/PRIVACY.md
  Content-Type: text/plain; charset=utf-8
  
/TERMS.md
  Content-Type: text/plain; charset=utf-8
  
/SECURITY.md
  Content-Type: text/plain; charset=utf-8

# Cache policy for static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# No cache for the main HTML file to ensure users get updates
/
  Cache-Control: no-cache, no-store, must-revalidate
  
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
